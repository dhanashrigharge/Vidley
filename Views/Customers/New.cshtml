@model Vidley.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>
@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(n => n.Customer.Name)
        @Html.TextBoxFor(n => n.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.Membershiptype, "Id", "Name"), "Select Membership type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.MembershipTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Customer.BirthDate)
        @Html.TextBoxFor(b => b.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Customer.BirthDate)
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(n => n.Customer.IsSubscribedToNewsLetter) Subscribed to Newsletter?
       
    </div>
    @Html.HiddenFor(i => i.Customer.Id);
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

